                        <label>Tổng số sản phẩm</label>
                        <input type="text" readonly class="form-control" value="@ViewBag.TotalProductOrder Món" />
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group">
                        <label>Tổng tiền</label>
