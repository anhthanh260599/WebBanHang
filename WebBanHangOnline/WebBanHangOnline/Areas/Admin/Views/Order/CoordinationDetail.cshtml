                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    @Html.Action("Partial_Detail", "Order", new { id = Model.Id })
                </div>
                <div class="col-6">
                    @Html.Action("Partial_Detail_Materials", "Order", new { id = Model.Id })
                </div>
