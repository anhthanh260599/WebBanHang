@model WebBanHangOnline.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";


}

<div class="card-body login-card-body">
    <div class="login-logo mb-4">
        <a href="/admin"><b>Four</b>Coffee</a>
        <hr style="margin-top:2px; width:60%; " />
    </div>

    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true);

        <div class="form-group">
            @*@Html.LabelFor(m => m.UserName, new { @class = "col-md-2 col-form-label" })*@
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Tên đăng nhập" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-12">
                <div class="icheck-primary">
                    @*<input type="checkbox" id="remember">*@
                    @Html.CheckBoxFor(x => x.RememberMe)
                    <label for="remember">
                        Nhớ mật khẩu
                    </label>
                    <a class="float-right" href="#">Quên mật khẩu ?</a>

                </div>

            </div>
        </div>
        <!-- /.col -->
     @*   <div class="form-group">
            <div class="col-5">
            </div>
        </div>*@
        <!-- /.col -->
        <button type="submit" class="btn btn-primary btn-block mt-3">Đăng nhập</button>

    }


    <!-- /.social-auth-links -->
    @*<p class="mb-1">
        </p>*@

    @*<p class="mb-0">
            <a href="register.html" class="text-center">Register a new membership</a>
        </p>*@
</div>
