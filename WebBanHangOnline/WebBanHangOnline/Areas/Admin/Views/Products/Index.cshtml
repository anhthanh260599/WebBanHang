                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">
                <a href="/admin/products/add" class="btn btn-primary">Thêm mới</a>
                <a href="#" id="btnDeleteSelected" class="btn btn-danger">Xoá các mục đã chọn</a>

                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>

        <div class="card-body">
            <table class="table table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="SelectAll" /></th>
                        <th>STT</th>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Danh mục</th>
                        <th>Số lượng</th>
                        <th>Giá (VND)</th>
                        <th>Ngày tạo</th>
                        <th>Hiển thị</th>
                        <th>Trang chủ</th>
                        <th>Hot</th>
                        <th>Nổi bật</th>
                        <th>Khuyến mãi</th>
                        <th>Cửa hàng</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {

                            //var strCheck = item.IsActive ? "<i class = 'fa fa-check text-success'></i>" : "<i class = 'fa fa-times text-danger'></i>";

                            <tr id="trow_@item.Id">
                                <td><input type="checkbox" class="cbkItem" value="@item.Id" /></td>
                                <td class="stt-cell">@i</td>
                                <td><img width="100px" class="imgproduct" data-id="@item.Id" src="@item.ProductImage.FirstOrDefault(x=>x.IsDefault).Image" /></td>
                                <td>@item.Title</td>
                                <td>@item.ProductCategory.Title</td>
                                <td>@item.Quantity</td>
                                <td>@String.Format("{0:N0}", item.Price) đ</td>
                                <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>

                                <td>
                                    <label class="switch">
                                        <input type="checkbox" data-id="@item.Id" class="btnActive" @(item.IsActive ? "checked" : "") />
                                        <span class="slider round"></span>
                                    </label>
                                </td>

                                <td>
                                    <label class="switch">
                                        <input type="checkbox" data-id="@item.Id" class="btnHome" @(item.IsHome ? "checked" : "") />
                                        <span class="slider round"></span>
                                    </label>
                                </td>

                                <td>
                                    <label class="switch">
                                        <input type="checkbox" data-id="@item.Id" class="btnHot" @(item.IsHot ? "checked" : "") />
                                        <span class="slider round"></span>
                                    </label>
                                </td>

                                <td>
                                    <label class="switch">
                                        <input type="checkbox" data-id="@item.Id" class="btnFeature" @(item.IsFeature ? "checked" : "") />
                                        <span class="slider round"></span>
                                    </label>
                                </td>

                                <td>
                                    @if (item.IsSale == true)
                                    {
                                        <button style="cursor:text;" class="btn btn-success">Đang khuyến mãi</button>
                                    }

                                </td>

                                @if (item.StoreID != null)
                                {
                                    <td>@item.Store.Name</td>
                                }
                                else
                                {
                                    <td>Tất cả cửa hàng</td>
                                }


                                @*<td class="text-center">
                                       <a href='#' data-id="@item.Id" class="btnActive">@Html.Raw(strCheck) </a>
                                    </td>*@

                                <td>
                                    <a href="/admin/products/edit/@item.Id" class="btn btn-sm btn-primary">Sửa</a> <br />
                                    <a href="#" data-id="@item.Id" class="btn btn-sm btn-danger btnDelete mt-2">Xoá</a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    @*else
                        {
                            <tr>
                                <td colspan="4">@Message.NoRecord</td>
                            </tr>
                        }*@
                </tbody>

            </table>


        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
<div id="dialog">
    <iframe id="myIframe" style="border:0; width: 100%; height: 100%"></iframe>
