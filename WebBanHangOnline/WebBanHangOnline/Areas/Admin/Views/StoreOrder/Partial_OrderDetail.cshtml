@model IEnumerable<WebBanHangOnline.Models.EF.OrderDetailMatts>

@if (Model != null && Model.Any())
{
    int i = 1;
    <table class="table table-hover">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên nguyên liệu</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                var thanhTien = item.Matterial.Price * item.Quantity;
                <tr>
                    <td>@i</td>
                    <td>@item.Matterial.Title (@item.MatterialID)</td>
                    <td>@String.Format("{0:N0}", item.Matterial.Price) đ</td>
                    <td>@item.Quantity</td>
                    <td>@String.Format("{0:N0}", thanhTien) đ</td>
                </tr>
                i++;
            }
        </tbody>
    </table>
}
