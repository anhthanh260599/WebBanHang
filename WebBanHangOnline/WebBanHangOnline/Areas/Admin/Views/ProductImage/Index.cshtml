<script>
    function BrowseServer(field) {
        var finder = new CKFinder();
        finder.selectActionFunction = function (fileUrl) {
            AddImage(@ViewBag.productId, fileUrl);
        };
        finder.popup();
    }
    function AddImage(id, url) {
        $.ajax({
            url: '/admin/productimage/AddImage',
            type: 'POST',
            data: { productId: id, url: url },
            success: function (rs) {
                if (rs.Success) {
                    window.location.reload();
                }
            }
        });
    }
    $(document).ready(function () {

        $('body').on('change', '.btnDefault', function () {
            debugger;
            var radio = $(this);
            var id = radio.data("id");
            $.ajax({
                url: '/admin/productimage/IsDefault',
                type: 'POST',
                data: { id: id },
                success: function (rs) {
                    if (rs.success) {
                        if (rs.IsDefault) {
                            radio.prop('checked', true);
                        } else {

                            radio.prop('checked', false);
                        }
                        //radio.prop('checked', rs.IsDefault);
                    }
                }
            });
        });

        $('body').on('click', '.btnDelete', function () {
            var id = $(this).data('id');
            var conf = confirm('@Message.ConfirmDelete');
            if (conf === true) {
                $.ajax({
                    url: '/admin/productimage/delete',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            $('#trow_' + id).remove();
                        }
                    }
                });
            }
        });
    });
</script>
