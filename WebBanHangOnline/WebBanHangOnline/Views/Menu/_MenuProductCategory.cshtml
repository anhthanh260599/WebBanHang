@model IEnumerable<WebBanHangOnline.Models.EF.ProductCategory>
@if (Model != null && Model.Any())
{
   <div class="banner">
       <div class="container">
           <div class="row">

               @foreach (var item in Model)
               {
                   <div class="col-md-4">
                       <div class="banner_item align-items-center" style="background-image:url(Content/assets/images/banner_1.jpg)">
                           <div class="banner_category">
                               <a href="@item.Alias">@item.Title</a>
                           </div>
                       </div>
                   </div>
               }

           </div>
       </div>
   </div>
}
