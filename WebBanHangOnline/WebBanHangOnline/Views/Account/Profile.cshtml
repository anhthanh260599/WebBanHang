@model WebBanHangOnline.Models.CreateAccountrViewModel
@{
    ViewBag.Title = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<style>
    .section_container {
        margin-top: 200px;
    }
</style>

<div class="container section_container">
    <div class="row">
        <div class="col-12">
            <h2>@ViewBag.Title</h2>
        </div>
    </div>

    @using (Html.BeginForm("UpdateProfile", "Account"))
    {
        @Html.ValidationSummary(false)
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>Họ và tên</label>
                    <input type="text" class="form-control" name="FullName" value="@Model.FullName" />
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">
                    <label>Số điện thoại</label>
                    <input type="text" class="form-control" name="Phone" value="@Model.Phone" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="Email" value="@Model.Email" readonly />
                </div>
            </div>

            <div class="col-6">
                <div class="form-group">
                    <label>Ngày gia nhập</label>
                    <input type="text" class="form-control" name="CreatedDate" value="@Model.CreatedDate.ToString("dd/MM/yyyy")" readonly />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label>Địa chỉ</label>
                    <input type="text" class="form-control" name="Address" value="@Model.Address" />
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-2">
                <button type="submit" class="btn btn-danger">Cập nhật</button>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
