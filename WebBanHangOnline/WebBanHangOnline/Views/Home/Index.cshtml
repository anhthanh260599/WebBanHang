<!-- Benefit -->

<div class="benefit">
    <div class="container">
        <div class="row benefit_row">
            <div class="col-lg-3 benefit_col">
                <div class="benefit_item d-flex flex-row align-items-center">
                    <div class="benefit_icon"><i class="fa-solid fa-wallet" aria-hidden="true"></i></div>
                    <div class="benefit_content">
                        <h6>Thanh toán trực tuyến</h6>
                        <p>Thanh toán ví điện tử</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 benefit_col">
                <div class="benefit_item d-flex flex-row align-items-center">
                    <div class="benefit_icon"><i class="fa fa-money" aria-hidden="true"></i></div>
                    <div class="benefit_content">
                        <h6>Thanh toán trực tiếp</h6>
                        <p>Thanh toán tiền mặt</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 benefit_col">
                <div class="benefit_item d-flex flex-row align-items-center">
                    <div class="benefit_icon"><i class="fa-solid fa-headset" aria-hidden="true"></i></div>
                    <div class="benefit_content">
                        <h6>Chat trực tuyến</h6>
                        <p>Dịch vụ chat trực tuyến</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 benefit_col">
                <div class="benefit_item d-flex flex-row align-items-center">
                    <div class="benefit_icon"><i class="fa fa-clock-o" aria-hidden="true"></i></div>
                    <div class="benefit_content">
                        <h6>Mở cửa cả tuần</h6>
                        <p>6:30 AM - 10:00 PM</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

