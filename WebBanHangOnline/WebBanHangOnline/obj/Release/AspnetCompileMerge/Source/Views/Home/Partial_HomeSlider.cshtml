@model IEnumerable<WebBanHangOnline.Models.EF.Slider>

@{
    ViewBag.Title = "Partial_HomeSlider";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.css" integrity="sha512-OTcub78R3msOCtY3Tc6FzeDJ8N9qvQn1Ph49ou13xgA9VsH9+LRxoFU6EqLhW4+PKRfU+/HReXmSZXHEkpYoOA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.css" integrity="sha512-UTNP5BXLIptsaj5WdKFrkFov94lDx+eBvbKyoe1YAfjeRPC+gT5kyZ10kOHCfNZqEui1sxmqvodNUx3KbuYI/A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<!-- Animate -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<!-- JQuery CDN -->
<script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
<!-- Slider JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.js" integrity="sha512-gY25nC63ddE0LcLPhxUJGFxa2GoIyA5FLym4UJqHDEMHjp8RET6Zn/SHo1sltt3WuVtqfyxECP38/daUc/WVEA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

<style>
    #slider {
        height: 80vh;
        z-index: 0;
        margin-top: 150px;
        width: 100%;
    }

        #slider .item {
        }

            #slider .item img {
                height: 80vh;
                border-radius: 20px;
                width: 100%;
                object-fit: cover;
                object-position: 50% 50%;
            }

        /* .owl-dots {
        top: 100%;
    } */

        #slider .owl-dots {
            top: -10%;
        }

        #slider .owl-dot span {
            width: 40px;
            height: 8px;
            margin: 5px 7px;
            /* background:#f79021; */
            display: block;
            /* -webkit-backface-visibility:visible; */
            /* transition:opacity 200ms ease; */
            border-radius: 30px;
        }

    .owl-theme .owl-dots .owl-dot.active span, .owl-theme .owl-dots .owl-dot:hover span {
        background-color: #fe4c50 !important;
    }




    #slider .active .slider__content {
        animation-iteration-count: 1;
        animation-fill-mode: both;
        animation-delay: 0.3s;
        animation-duration: 1s;
        animation-name: lightSpeedInLeft;
    }


    .item {
        position: relative;
    }

    .slider__content {
        position: absolute;
        z-index: 1;
        bottom: 0;
        left: 0;
        right: 0;
        text-align: center;
        padding-bottom: 80px;
    }

    .slider__content-header {
        font-size: 2rem;
        color: white;
    }
</style>
<div class="slider">
    <div class="row">
        <div class="col-12">
            <div class="owl-carousel owl-theme" id="slider">
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <a href="@item.Link">
                            <div class="item">
                                <img src="@item.Image" alt="">
                                <div class="slider__content">
                                    <h3 class="slider__content-header">@item.Title</h3>
                                    <p class="btn btn-danger mt-3"><span>Xem chi tiết</span> <p/>
                                </div>
                            </div>
                        </a>
                    }
                }
            </div>
        </div>
    </div>
</div>

<script>
    $('.owl-carousel').owlCarousel({
        loop: true,
        margin: 0,
        nav: false,
        autoplay: true,
        smartSpeed: 700,
        autoplayTimeout: 7000,
        responsive: {
            0: {
                items: 1
            },
            600: {
                items: 1
            },
            1000: {
                items: 1
            }
        }
    })
</script>

