@model IEnumerable<WebBanHangOnline.Models.EF.OrderMatts>

@{
    ViewBag.Title = "Danh sách đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/order" class="nav-link">Đơn hàng</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý Đơn hàng nguyên liệu</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Đơn hàng nguyên liệu</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">

                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>

        <div class="card-body">
            <table class="table table-hover" id="dataTable">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã đơn hàng</th>
                        <th>Tên cửa hàng</th>
                        <th>Số điện thoại</th>
                        <th>Tổng tiền</th>
                        <th>Ngày tạo</th>
                        <th>Trạng thái</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.Code</td>
                                <td>@item.Store.Name</td>
                                <td>@item.Phone</td>
                                <td>@String.Format("{0:N0}", item.TotalAmount) đ</td>
                                <td>@item.CreateDate.ToString("dd/MM/yyyy")</td>
                                @if (item.Status == 1)
                                {
                                    <td style="cursor:text; width: 140px;" class="btn btn-sm btn-secondary">Đặt hàng thành công</td>
                                }
                                @if (item.Status == 2)
                                {
                                    <td style="cursor: text; width: 140px;" class="btn btn-sm btn-warning">Đang giao hàng</td>
                                }
                                @if (item.Status == 3)
                                {
                                    <td style="cursor: text; width: 140px;" class="btn btn-sm btn-success">Giao hàng thành công</td>
                                }
                                <td>
                                    <a href="@Url.Action("OrderDetail", "StoreOrder", new { id = item.Id })" class="btn btn-sm btn-info">Xem</a>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Coordinator"))
                                    {
                                        if (item.Status != 3)
                                        {
                                            <button type="button" class="btn btn-sm btn-primary btnCapNhat" data-toggle="modal" data-target="#modal-default" data-id="@item.Id">
                                                Cập nhật
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-sm disabled btn-primary"> Cập nhật </button>
                                        }
                                    }
                                </td>
                            </tr>
                            i++;
                        }
                    }

                </tbody>

            </table>


        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->


<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cập nhật trạng thái</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="txtOrderID" value="0" />
                <div class="form-group">
                    <label>Trạng thái</label>
                    <select class="form-control" id="ddTrangThai">
                        <option value="2">Đang giao hàng</option>
                        <option value="3">Giao hàng thành công</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-primary" id="btnLuu">Lưu thay đổi</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>



@section scripts {
    <script>
        $(document).ready(function () {
            $('body').on('click', '.btnCapNhat', function () {
                var id = $(this).data('id')
                $('#txtOrderID').val(id);
                $('#modal-default').modal('show')
            })

            $('body').on('click', '#btnLuu', function () {
                var id = $('#txtOrderID').val();
                var trangThai = $('#ddTrangThai').val();
                $.ajax({
                    url: '/admin/StoreOrder/UpdateTrangThai',
                    type: 'POST',
                    data: { id: id, trangThai: trangThai },
                    success: function (rs) {
                        if (rs.success) {
                            //alert(rs.message)
                            Swal.fire({
                                icon: 'success',
                                title: 'Thành công',
                                text: rs.message,
                                confirmButtonText: 'OK'
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    location.reload(); // Reload trang sau khi người dùng nhấn OK
                                }
                            });
                        }
                    }
                })
            })
        });
    </script>

}