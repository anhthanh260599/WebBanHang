@model WebBanHangOnline.Models.EF.ReviewProduct
@using WebBanHangOnline.Models.Common;
@{
    ViewBag.Title = "Chi tiết đánh giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">Chi tiết đánh giá</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý Đánh giá</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Chi tiết đánh giá</li>
                </ol>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <a href="/admin/ReviewProduct" class="btn btn-danger">Quay lại</a>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>

            <div class="card-tools">

                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label>Sản phẩm đánh giá</label>
                        <input type="text" readonly class="form-control" value="@Model.Products.Title" />
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group">
                        <label>Tên người dùng</label>
                        <input type="text" readonly class="form-control" value="@Model.UserName" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label>Tên đầy đủ</label>
                        <input type="text" readonly class="form-control" value="@Model.User.FullName" />
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <input type="text" readonly class="form-control" value="@Model.User.Phone" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" readonly class="form-control" value="@Model.Email" />
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group">
                        <label>Số sao</label>
                        <input type="text" readonly class="form-control" value="@Model.Stars" />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label>Ngày đánh giá</label>
                        <input type="text" readonly class="form-control" value="@Model.CreatedDate.ToString("dd/MM/yyyy hh:mm:ss:tt")" />
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label>Nội dung đánh giá</label>
                        <textarea readonly class="form-control">@Model.Content</textarea>
                    </div>
                </div>
            </div>



        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
