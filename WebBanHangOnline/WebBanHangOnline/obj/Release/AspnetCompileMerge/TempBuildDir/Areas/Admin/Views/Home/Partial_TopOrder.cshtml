<script>
    // Lấy dữ liệu từ Model để vẽ biểu đồ
    var labels = [];
    var viewCounts = [];

    @foreach (var item in Model)
    {
        <text>labels.push('@Html.Raw(item.ProductName)');</text>
        <text>viewCounts.push('@item.TotalQuantitySold');</text>
    }

    // Vẽ biểu đồ cột sử dụng Chart.js
    var ctx = document.getElementById('TopOrder').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Tổng số bán',
                data: viewCounts,
                backgroundColor: 'rgba(255, 99, 132, 0.2)',
                borderColor: 'rgba(255, 99, 132, 1)',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            },
        }
    });
</script>