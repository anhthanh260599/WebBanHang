@model IEnumerable<WebBanHangOnline.Models.EF.OrderDetail>
@using WebBanHangOnline.Models.Common

@if (Model != null && Model.Any())
{
    int i = 1;
    <table class="table table-hover">
        <thead>
            <tr>
                <th>STT</th>
                <th>Tên sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                var thanhTien = item.Price * item.Quantity;
                <tr>
                    <td>@i</td>
                    <td>@item.Product.Title</td>
                    <td>@Common.FormatNumber(item.Price, 0)</td>
                    <td>@item.Quantity</td>
                    <td>@Common.FormatNumber(thanhTien, 0)</td>

                </tr>
                i++;
            }
        </tbody>
    </table>
}

