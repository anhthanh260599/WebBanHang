@model WebBanHangOnline.Models.EF.Posts

@{
    ViewBag.Title = "Partial_NewItem";
}

@if (Model != null)
{
    <div class="deal_ofthe_week">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-6">
                    <div class="deal_ofthe_week_img">
                        <img width="100%" src="@Model.Image" alt="">
                    </div>
                </div>
                <div class="col-6 text-right deal_ofthe_week_col">
                    <div class="deal_ofthe_week_content d-flex flex-column align-items-center">
                        <div class="section_title">
                            <h2>Sản phẩm mới</h2>
                        </div>
                        <div style="margin-top: 32px" class="section_description">
                            <p class="text-left"> @Model.Description </p>
                        </div>

                        <div class="red_button deal_ofthe_week_button"><a href="/post/san-pham-moi">Xem chi tiết</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


