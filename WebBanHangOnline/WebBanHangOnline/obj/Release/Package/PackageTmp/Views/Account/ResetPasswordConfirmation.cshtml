@{
    ViewBag.Title = "Xác nhận đặt lại mật khẩu";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">


<main class="container" style="margin-top:200px;" aria-labelledby="title">
    <hgroup class="title">
        <h3 id="title">@ViewBag.Title.</h3>
    </hgroup>
    <div>
        <p>
            Mật khẩu của bạn đã được đặt lại. Hãy @Html.ActionLink("Nhấn vào đây để đăng nhập", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
        </p>
    </div>
</main>
