@model WebBanHangOnline.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Quên mật khẩu";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<main style="margin-top:200px;" class="container" aria-labelledby="title">
    <h3 id="title">@ViewBag.Title.</h3>

    @if (!string.IsNullOrEmpty(ViewBag.NoAccount))
    {
        <div class="alert alert-danger">
            @ViewBag.NoAccount
        </div>
    }


    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }


    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Nhập email mà bạn đã đăng ký</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="row mt-2">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 col-form-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="row">
            <div class="offset-md-2 col-md-10 mt-2">
                <input type="submit" class="btn btn-outline-dark" value="Gửi email" />
            </div>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
