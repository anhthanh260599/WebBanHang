
@{
    ViewBag.Title = "Trang chủ Admin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Trang chủ</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Trang chủ</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="col-4">
            <h5>Top 5 sản phẩm xem nhiều </h5>
            @Html.Action("Partial_TopViewCount", "Home")
        </div>


        <div class="col-4">
            <h5>Top 5 sản phẩm bán ra</h5>
            @Html.Action("Partial_TopOrder", "Home")
        </div>

        <div class="col-4">
            <h5>Top 5 sản phẩm yêu thích</h5>
            @Html.Action("Partial_TopWishList", "Home")
        </div>
    </div>

</section>
<!-- /.content -->
